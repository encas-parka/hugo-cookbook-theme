{
  "testMode": false,
  "dryRun": false,
  "backupBeforeMigration": true,
  "backupPath": "../../backups/migration-backup",
  "logging": {
    "level": "info",
    "console": true,
    "file": "migration.log"
  },
  "migration": {
    "ingredients": {
      "uuidLength": 8,
      "slugFormat": "title_uuid",
      "ignorePatterns": []
    },
    "recettes": {
      "uuidFormat": "v4",
      "slugFormat": "title_uuid",
      "ignorePatterns": []
    }
  },
  "validation": {
    "strictMode": true,
    "failOnErrors": true,
    "allowedIngredientTypes": [
      "frais",
      "legumes", 
      "lof",
      "sucres",
      "epices",
      "sec",
      "animaux",
      "autres"
    ],
    "allowedAllergens": [
      "Produit laitier",
      "Gluten",
      "Crustacé",
      "Oeuf",
      "Poisson",
      "Viande",
      "Porc",
      "Arachides",
      "Soja",
      "Fruits à coque",
      "Céleri",
      "Moutarde",
      "Sésame",
      "Sulfites",
      "Lupin",
      "Mollusque"
    ]
  }
}