{{/*
  global-indexes.html

  But: construire et retourner tous les index globaux nécessaires au site en une seule fois.
  Ce partial est conçu pour être appelé avec partialCached une seule fois au niveau du site
  pour éviter les reconstructions multiples coûteuses.

  Sortie: dict avec:
    - ingredients: {byUUID, byAllergen}  // depuis ingredients-index
    - recettes: {byUUIDRecette}          // depuis recettes-index

  Usage optimal:
    {{ $globalIndexes := partialCached "functions/global-indexes.html" . "global-indexes-v1" }}
    {{ $ingredientsIndex := $globalIndexes.ingredients }}
    {{ $recettesIndex := $globalIndexes.recettes }}
*/}}

{{- $ingredientsIndex := partialCached "functions/ingredients-index.html" "ingredients-index" -}}
{{- $recettesIndex := partialCached "functions/recettes-index.html" "recettes-index-global" -}}

{{- return (dict "ingredients" $ingredientsIndex "recettes" $recettesIndex) -}}