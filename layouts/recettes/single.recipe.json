{{/* Nouveau template simplifié - toutes les données sont déjà dans le frontmatter */}}
{
  "id": {{ .Params.id  | jsonify }},
  "title": {{ .Title | lower | title | jsonify }},
  "draft": {{ .Draft | jsonify }},
  "typeR": {{ .Params.typeR | jsonify }},
  "categories": {{ .Params.categories | jsonify }},
  "description": {{ .Params.description | jsonify }},
  "region": {{ .Params.region | jsonify }},
  "saison": {{ .Params.saison | jsonify }},
  "auteur": {{ .Params.auteur | jsonify }},
  "regime": {{ .Params.regime | jsonify }},
  "cuisson": {{ .Params.cuisson | jsonify }},
  "serveHot": {{ .Params.serveHot | jsonify }},
  "plate": {{ .Params.plate }},
  "quantite_desc": {{ .Params.quantite_desc | jsonify }},
  "check": {{ .Params.check | jsonify }},
  "materiel": {{ .Params.materiel | jsonify }},
  "ingredients": {{ .Params.ingredients | jsonify }},
  "preparation": {{ .Params.preparation | jsonify }},
  "preparation24h": {{ .Params.preparation24h | jsonify }},
  "astuces": {{ .Params.astuces | jsonify }},
  "prepAlt": {{ .Params.prepAlt | jsonify }},
  "permissionWrite": {{ .Params.permissionWrite | default (slice) | jsonify }},
  "publishedAt": {{ .Params.publishedAt | default "2025-01-01T00:00:00Z" | jsonify }},
  "createdAt": {{ .Params.createdAt | default .Params.publishDate | default "2025-01-01T00:00:00Z" | jsonify }},
  "updatedAt": {{ .Params.updatedAt | default .Params.publishDate | default "2025-01-01T00:00:00Z" | jsonify }},
  "createdBy": {{ .Params.createdBy | default .Params.auteur | default "" | jsonify }},
  "rootRecipeId": {{ .Params.rootRecipeId | default "" | jsonify }},
  "versionLabel": {{ .Params.versionLabel | default "" | jsonify }},
  "teams": {{ .Params.teams | default "" | jsonify }},
  "status": {{ .Params.status | default "public" | jsonify }}
}
